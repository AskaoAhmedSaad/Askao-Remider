<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ec7f62" >
    
    	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.85"
        android:orientation="vertical" >
    
				<TextView
			        android:id="@+id/txt_selectNot"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:text="Select Notification time"
			        android:layout_weight="0.02"
			        android:textColor="#404037"
			        android:textSize="25sp" />
		<LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.02" />
                <Button
                    android:id="@+id/btn_daily"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:textColor="#756d62"
                    android:textSize="25sp"
                    android:background="#e9e5d9"
                    android:text="Daily" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.02" />
                
			    <Button
			        android:id="@+id/btn_onceAtCertainDay"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_weight="0.15"
			        android:textColor="#756d62"
                    android:textSize="25sp"
			        android:background="#e9e5d9"
			        android:text="Once At Certain Day" />
			    
			    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.02" />
			    
			    <Button
			        android:id="@+id/btn_everyMonthAtCertainDay"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_weight="0.15"
			        android:textColor="#756d62"
                    android:textSize="20sp"
			        android:background="#e9e5d9"
			        android:text="Every Month At Certain Day" />
    
			    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.02" />
			    
			    <Button
			        android:id="@+id/btn_everyNoOfDays"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_weight="0.15"
			        android:textColor="#756d62"
                    android:textSize="25sp"
			        android:background="#e9e5d9"
			        android:text="Every Number Of Days" />
			    
			    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.02" />
			    
	</LinearLayout> 
</RelativeLayout>