<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#baac9f" >
        
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
        
	    <TextView
	        android:id="@+id/txt_title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Every Month At Certain Date"
	        android:textColor="#404037"
	        android:textSize="18sp" />
	    
	    <TextView
	        android:id="@+id/txt_title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Select the day"
	        android:textColor="#404037"
	        android:textSize="15sp" />
	
	    <Spinner
	        android:id="@+id/spinner_EveryMonthCertainDate"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Choose a value"
	        android:textSize="18sp" />
		
	    <TimePicker
	        android:id="@+id/timePicker_EveryMonthCertainDate"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
	  	
	    <Button
	        android:id="@+id/btn_EveryMonthCertainDate"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:minHeight="70dp"
	        android:maxHeight="150dp"
	        android:textSize="20sp"
	        android:background="#ece0c6"
	        android:text="Submit" />
			
	</LinearLayout>
</RelativeLayout>