<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="#baac9f" >	
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical" >
        
		    <TextView
		        android:id="@+id/txt_title"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="Edit notification time"
		        android:textColor="#404037"
		        android:textSize="25sp"
		        />
		    <TextView
		        android:id="@+id/txt_selectNot"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="notes"
		        android:textColor="#404037"      
		        android:textSize="18sp" />
			<EditText
		        android:id="@+id/editNotesInput"
		        android:layout_width="match_parent"
		        android:inputType="text"
		        android:layout_height="100dp" />
					<TextView
				        android:id="@+id/txt_selectNot"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:text="date"
				        android:textColor="#404037"
				        android:layout_weight="0.5"      
				        android:textSize="18sp" />
					<DatePicker
				        android:id="@+id/datePicker_submitCertainDate"
				        android:layout_width="fill_parent"
				        android:layout_height="match_parent"/>	
					<TextView
				        android:id="@+id/txt_selectNot"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:text="time"
				        android:textColor="#404037"
				        android:layout_weight="0.5"        
				        android:textSize="18sp" />		
				    <TimePicker
				        android:id="@+id/timePicker_submitCertainDate"
				        android:layout_width="fill_parent"
				        android:layout_height="match_parent"/>
		    	
			<LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="15dp" />
		    <TableLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content">
		    <TableRow >
		    <Button
		        android:id="@+id/btn_submitCertainDate"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:minHeight="70dp"
		        android:maxHeight="150dp"
		        android:textSize="20sp"
		        android:background="#ece0c6"
		        android:layout_weight=".45"
		        android:text="Submit" />
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_weight=".1" /> 
		    <Button
					android:id="@+id/btn_delete"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:minHeight="70dp"
					android:maxHeight="150dp"
					android:textSize="20sp"
					android:background="#ece0c6"
					android:layout_weight=".45"
					android:text="Delete" />
		    </TableRow>
			</TableLayout>
	</LinearLayout>			
		</ScrollView>
	
